// ============================================================================
// STAFF MANAGEMENT
// ============================================================================

model StaffMember {
  id               String      @id @default(cuid())
  userId           String      @unique
  name             String
  phone            String?
  avatar           String?
  color            String?
  jobRole          String?     // Specific job role (stylist, colorist, etc.)
  dateOfBirth      DateTime?   // Date of birth for HR management
  homeService      Boolean     @default(false)
  status           String      @default("ACTIVE") // StaffStatus @default(ACTIVE)
  // HR Document Management Fields
  employeeNumber   String?     // Employee number for HR tracking
  qidNumber        String?     // Qatar ID number
  passportNumber   String?     // Passport number
  qidValidity      String?     // Qatar ID expiration date in MM-DD-YY format
  passportValidity String?     // Passport expiration date in MM-DD-YY format
  medicalValidity  String?     // Medical certificate expiration date in MM-DD-YY format
  profileImage     String?     // Base64 encoded image or URL
  profileImageType String?     // MIME type of the image
  specialties      String?     // JSON data for manual service specialties (stored as string)
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  // Relationships
  user                User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  locations           StaffLocation[]
  appointments        Appointment[]
  services            StaffService[]
  appointmentServices AppointmentService[]
  schedule            StaffSchedule[]

  @@index([name]) // Index for name searches
  @@index([status]) // Index for filtering by status
  @@map("staff_members")
}

// enum StaffStatus {
//   ACTIVE
//   INACTIVE
//   ON_LEAVE
// }

model StaffSchedule {
  id        String   @id @default(cuid())
  staffId   String
  dayOfWeek Int      // 0 = Sunday, 1 = Monday, etc.
  startTime String   // HH:MM format
  endTime   String   // HH:MM format
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  staff StaffMember @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@unique([staffId, dayOfWeek])
  @@map("staff_schedules")
}

// ============================================================================
// CLIENT MANAGEMENT
// ============================================================================

model Client {
  id                  String    @id @default(cuid())
  userId              String    @unique
  name                String
  phone               String?
  email               String?   // Client's email (can differ from user email)
  address             String?   // Client's address
  city                String?   // Client's city
  state               String?   // Client's state
  zipCode             String?   // Client's zip code
  dateOfBirth         DateTime?
  preferences         String?   // JSON data stored as string
  notes               String?   // Using Text type for potentially long content
  preferredLocationId String?   // Preferred location for this client
  registrationSource  String?   // How the client was registered (manual, client_portal, etc.)
  isAutoRegistered    Boolean   @default(false) // Whether client was auto-registered
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  // Relationships
  user              User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  preferredLocation Location?        @relation(fields: [preferredLocationId], references: [id])
  loyaltyProgram    LoyaltyProgram?
  memberships       Membership[]

  @@index([name]) // Index for name searches
  @@index([phone]) // Index for phone searches
  @@index([email]) // Index for email searches
  @@index([preferredLocationId]) // Index for location filtering
  @@map("clients")
}

// ============================================================================
// LOCATION MANAGEMENT
// ============================================================================

model Location {
  id        String   @id @default(cuid())
  name      String
  address   String
  city      String
  state     String?
  zipCode   String?
  country   String
  phone     String?
  email     String? // Case-insensitive email
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  coordinates String? // JSON data stored as string

  // Relationships
  staff              StaffLocation[]
  appointments       Appointment[]
  services           LocationService[]
  products           ProductLocation[]
  batches            ProductBatch[]
  transactions       Transaction[]
  audits             InventoryAudit[]
  transfersFrom      Transfer[]        @relation("TransferFrom")
  transfersTo        Transfer[]        @relation("TransferTo")
  preferredByClients Client[]          // Clients who prefer this location

  @@index([name])
  @@index([city, country])
  @@index([isActive])
  @@map("locations")
}

// ============================================================================
// SERVICES MANAGEMENT
// ============================================================================

model Service {
  id                 String   @id @default(cuid())
  name               String
  description        String? // Using Text type for potentially long content
  duration           Int      // in minutes
  price              Decimal // Specify precision for monetary values
  category           String
  showPricesToClients Boolean  @default(true)
  isActive           Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  // Relationships
  locations    LocationService[]
  staff        StaffService[]
  appointments AppointmentService[]

  @@index([name])
  @@index([category, isActive])
  @@index([price])
  @@map("services")
}

// ============================================================================
// APPOINTMENTS MANAGEMENT
// ============================================================================

model Appointment {
  id               String            @id @default(cuid())
  bookingReference String            @unique
  clientId         String
  staffId          String
  locationId       String
  date             DateTime
  duration         Int               // in minutes
  totalPrice       Decimal           // Specify precision for monetary values
  status           String            @default("PENDING") // AppointmentStatus @default(PENDING)
  notes            String?           // Using Text type for potentially long content

  // Payment fields
  paymentStatus    String?           // Payment status: 'paid', 'pending', 'partial'
  paymentMethod    String?           // Payment method used
  paymentDate      DateTime?         // When payment was made
  discountPercentage Decimal?        // Discount percentage applied
  discountAmount   Decimal?          // Discount amount applied
  originalAmount   Decimal?          // Original amount before discount
  finalAmount      Decimal?          // Final amount after discount
  transactionRecorded Boolean?       @default(false) // Flag to prevent duplicate transaction creation

  // Status history - JSON array of status changes with timestamps
  statusHistory    String?           // JSON array: [{status: string, timestamp: string, updatedBy: string}]

  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  // Relationships
  client   User        @relation(fields: [clientId], references: [id])
  staff    StaffMember @relation(fields: [staffId], references: [id])
  location Location    @relation(fields: [locationId], references: [id])
  services AppointmentService[]
  products AppointmentProduct[]

  @@index([date]) // Index for date-based queries
  @@index([clientId])
  @@index([staffId])
  @@index([locationId])
  @@index([status])
  @@map("appointments")
}

